<html lang="en">
<head>
    <%- include('partials/head.ejs')%> </head>
<body>
    <div class="container mt-3">
        <a href="/"><button class="btn btn-secondary"><-Вернуться в главную страницу</button></a>
        <h2>Добавить задачу</h2>
        <form action="/new" method="post">
          <div class="mb-3">
            <label for="exampleFormControlInput1" class="form-label">Название задачи</label>
            <input type="text" class="form-control" id="exampleFormControlInput1" placeholder="Название задачи" name="title">
          </div>
          <div class="mb-3">
            <label for="exampleFormControlTextarea1" class="form-label">Описание задачи</label>
            <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" name="description"></textarea>
          </div>

          <button class="btn btn-primary">Добавить</button>
        </form>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
